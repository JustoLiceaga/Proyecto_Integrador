<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<%- include("./partials/header") %> 


	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= resultado.foto_perfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= resultado.usuario %> 
						<a href="/users/profile/<%= resultado.id %>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li class="blanco"> Email: <%= resultado.email %></li>
						<li class="blanco">Productos: <%= resultado.productos.length %></li>
						<li class="blanco">200 seguidores</li>
						<li class="blanco">300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < resultado.productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detalle/<%= resultado.productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= resultado.productos[i].imagen %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2 class="negro"><%= resultado.productos[i].nombre %></h2>
								<p><%= resultado.productos[i].descripcion %></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
    <%- include("./partials/footer") %>

	<!-- /footer -->
</body>	
</html>