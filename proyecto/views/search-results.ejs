<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include("./partials/head") %>


<body>
	<!-- Header -->
    <%- include("./partials/header") %>

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<div class="product-detail">
				<div class="row">
					<p>Resultados de búsqueda</p>
    
					<ul>
					  <% for (let i = 0; i < productos.length; i++) { %>
						<li>
							<img src="<%= productos[i].imagen %>" alt=""></img>
						  <h2><a href="/producto/detalle/<%= productos[i].id %>">
							<%= productos[i].nombre %>
							</a></h2>
							<p>Publicado por: <a href="/users/profile/<%= productos[i].usuario.id %>"><%= productos[i].usuario.email %></a></p>
						</li>
				  <% } %>
					  </ul>
				</div>
			</div>


	<!-- footer -->
    <%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>