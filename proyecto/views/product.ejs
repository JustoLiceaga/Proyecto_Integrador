<%- include("./partials/head") %>
<body>
    <!-- product detail -->
    <%- include("./partials/header") %>
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title">Nombre del producto</h2> 
			<p class="product-detail-description">
				<a href="/product/editar" class="color">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= producto.imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">

					<% for( let i = 0; i < producto.comentarios.length; i++ ) { %>
						<article>
							<img src="<%= producto.comentarios[i].usuario.foto_perfil %>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile/<%= producto.comentarios[i].usuario.id %>">
									<%= producto.comentarios[i].usuario.usuario %> </a> </strong>
								<%= producto.comentarios[i].texto %></p>
							</div>
						</article>
					<% } %>
						
						

					</section>
					<form class="form" action="/product/detalle/<%= producto.id %>/createComentario" method="post">
						<label for="comentario">comentario:</label>
						<input class="form-input" type="text" value="" placeholder="Agregar comentario" name="comentario">
                        <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->
	<%- include("./partials/footer") %>

</body>
