<%- include("./partials/head") %>
<body>
    <!-- product detail -->
    <%- include("./partials/header") %>
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title">Nombre del producto</h2> 
			<p class="product-detail-description">
				<a href="/editar" class="color">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= producto[6].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						Descripción corta del producto. En la página principal solo se ven 2 líneas de estar descripción.Lorem ipsum dolor,
						sit amet consectetur adipisicing elit. Tae ipsam amet eum, totam dolore libero illo unde? Consectetur dolorem neque
						veritatis.</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src=" <%= producto[6].comentarios[0].imagenPerfil %>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/profile"><%= producto[6].comentarios[0].usuario %>: </a> </strong>
								<%= producto[6].comentarios[0].texto %></p>
							</div>
						</article>
						<article>
							<img src="<%= producto[6].comentarios[1].imagenPerfil %>" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="profile.html"><%= producto[6].comentarios[1].usuario %>: </a> </strong>
									<%= producto[6].comentarios[1].texto %></p>
							</div>
						</article>
						<article>
							<img src="<%= producto[6].comentarios[2].imagenPerfil %>" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/profile"><%= producto[6].comentarios[2].usuario %>: </a> </strong>
									<%= producto[6].comentarios[2].texto %></p>
							</div>
						</article>
						<article>
							<img src="<%= producto[6].comentarios[3].imagenPerfil %>" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/profile"><%= producto[6].comentarios[3].usuario %>: </a> </strong>
									<%= producto[6].comentarios[3].texto %></p>
							</div>
						</article>
						<article>
							<img src="<%= producto[6].comentarios[0].imagenPerfil %>" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/profile"><%= producto[6].comentarios[0].usuario %>: </a> </strong>
									<%= producto[6].comentarios[0].texto %></p>
							</div>
						</article>

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->
</body>