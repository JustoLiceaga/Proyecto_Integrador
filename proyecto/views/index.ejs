<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner_kaye.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < producto.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detalle/<%= producto[i].id %>">
							<figure class="product-box_image">
								<img src="<%= producto[i].imagen %>" alt="<%= producto[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2 class="negro"><%= producto[i].nombre %></h2>
								<p><%= producto[i].descripcion %></p>
								<p>Cargado por: <a href="/users/profile/<%= producto[i].usuario.id %>" class="charged"><%= producto[i].usuario.email %></a></p>
								<p>Comentarios: 4</p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
				
			
		</div>
	</div>


	<!-- footer -->
  <%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>